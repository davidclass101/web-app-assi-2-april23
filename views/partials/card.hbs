<div class="ui card" id ="{{name}}">
  <div class="image">
    <img src="{{image}}">
  </div>
  <div class="content">
    <a class="header">{{fullname}}</a>
    <div class="meta">
      <span class="date">Founded in {{founded}}</span>
    </div>
    <div class="description">
      HQ: {{city}}
    </div>
    <div class="description">
      <a href = "{{url}}">{{url}}</a>
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      {{staff}} Staff Employed
    </a>
  </div>
</div>